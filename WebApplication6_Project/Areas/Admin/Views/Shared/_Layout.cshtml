
@using System.Web.Optimization

@{
    Layout = null;
}


@helper SelectedTagClass(string tabName) { 

    if (tabName == ViewBag.SelectedTab)
    {
         
        @: active
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SimpleBlog - Admin </title>

    @Styles.Render("~/admin/styles")
</head>
<body>


    <div class="container">
        <ul class="nav nav-pills">
            <li class="@SelectedTagClass("posts")">
                @Html.ActionLink("Posts", "Index","Posts", new {area="admin"}, new { })
            </li>
            <li class="@SelectedTagClass("users")">
                @Html.ActionLink("Users", "Index", "Users", new { area = "admin" }, new { })
            </li>
            <li class="pull-right">
                @Html.RouteLink("Back to Website", "Home")
            </li>

        </ul>
    </div>


    @RenderBody()
 
    @Scripts.Render("~/admin/scripts")
    @RenderSection("Scripts", false)

    <form class="hidden" id="anti-forgery-form">
        @Html.AntiForgeryToken()
    </form>

</body>
</html>
